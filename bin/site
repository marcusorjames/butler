#!/bin/bash
# site subcommand

package="butler site"

DIR="$DIR/bin"

print_usage() {
  echo "Manage sites"
  echo " "
  echo "SYNOPSIS:"
  echo " "
  echo "$package COMMAND ..."
  echo " "
  echo -e "${Yellow}Site Management:"
  echo -e ""
  echo -e "${Green}add   ${Color_Off}Add a new site"
  echo -e "${Green}cd    ${Color_Off}Change Dicretory to site"
}

[ ! "$#" -gt 0 ] && print_usage && exit 1

function="$1"
shift

case $function in
    'add') . $DIR/site-add "$@" ;;
    'cd') $DIR/site-cd "$@" ;;
    *) print_usage ; exit 1;;
esac

