#!/bin/bash
# site cd subcommand

package="butler site cd"

print_usage() {
  echo "Change directory into site"
  echo " "
  echo "SYNOPSIS:"
  echo " "
  echo "$package NAME"
}

check_dir_exists() {
  [ ! -d $1 ] && echo -e "${CError}Error: $site doesn't exists" && exit 1
}


main() {
  [ ! "$#" -gt 0 ] && print_usage && exit 1

  site="$1"
  shift

  site_dir="$SITES_DIR/$site"

  check_dir_exists $site_dir

  cd $site_dir
  $SHELL
}

main "$@"

