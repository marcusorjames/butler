#!/bin/sh
# Autocomplete for butler

DIR="$(dirname "$(readlink -f "$0")")"
[ -f "$DIR/../.env" ] || return 0
export $(cat "$DIR/../.env" | xargs)
TEMPLATES="$DIR/../templates"

_butler_autocomplete()
{
    local cur prev

    cur=${COMP_WORDS[COMP_CWORD-1]}
    prev=${COMP_WORDS[COMP_CWORD-2]}

    case ${COMP_CWORD} in
        1)
            COMPREPLY=()
            ;;
        2)
            case ${cur} in
                up|down|restart)
                    COMPREPLY=($(compgen -W "$(ls "$BUTLER_SITES_DIR"/)"))
                    ;;
                sftp)
                    # Autocomplete flags for the sftp helper
                    COMPREPLY=($(compgen -W "-k --key -u --upload -p --port -w --password -h --help" -- "${COMP_WORDS[COMP_CWORD]}"))
                    ;;
            esac
            ;;
        3)
            case ${prev} in
                site)
                    case ${cur} in
                        cd)
                            COMPREPLY=($(compgen -W "$(ls "$BUTLER_SITES_DIR"/)"))
                            ;;
                    esac
                    ;;
                sftp)
                    case ${COMP_WORDS[COMP_CWORD-1]} in
                        -k|--key|-u|--upload)
                            COMPREPLY=($(compgen -f -- "${COMP_WORDS[COMP_CWORD]}"))
                            ;;
                    esac
                    ;;
            esac
            ;;
        *)
            COMPREPLY=()
            ;;
    esac
}

complete -F _butler_autocomplete butler
